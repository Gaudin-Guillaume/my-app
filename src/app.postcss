/* Write your global styles here, in PostCSS syntax */

@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,600;1,400;1,600&display=swap');

html,
body {
	@apply h-full overflow-hidden;
}

h1,
h2 {
	font-family: 'Poppins';
	font-weight: 600;
	margin: 0;
	color: #404040;
}
a,
p {
	font-family: 'Poppins';
	font-weight: 400;
	font-size: 2em;
	margin: 0;
	color: #404040;
}
h1 {
	font-size: 5em;
}
